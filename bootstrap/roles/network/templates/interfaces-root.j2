# Loopback device:
auto lo
iface lo inet loopback

# device: eth0
auto eth0
iface eth0 inet static
  address     {{ipv4_address}}
  netmask     {{ipv4_netmask}}
  gateway     {{ipv4_gateway}}
  pointopoint {{ipv4_gateway}}

iface eth0 inet6 static
  address {{ipv6_address}}
  netmask {{ipv6_netmask}}
  gateway {{ipv6_gateway}}

# device: br0
auto br0
iface br0 inet static
  address        {{nat_address}}
  netmask        {{nat_netmask}}
  bridge_stp     off
  bridge_ports   none
  bridge_fd      0
  bridge_maxwait 0
{% for additional_ip in ipv4_additional_ips %}
  up route add -host {{additional_ip}} dev br0
  down route del -host {{additional_ip}} dev br0
{% endfor %}

iface br0 inet6 static
  address {{ipv6_address}}
  netmask 64

