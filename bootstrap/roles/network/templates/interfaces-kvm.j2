# Loopback device:
auto lo
iface lo inet loopback

auto br0
iface br0 inet static
  address        {{network.ipv4.address}}
  netmask        {{network.ipv4.netmask}}
  gateway        {{network.ipv4.gateway}}
  pointopoint    {{network.ipv4.gateway}}
  bridge_ports   eth0
  bridge_fd      0
  bridge_maxwait 0
  up route add -net 10.0.0.0/8 dev br0
  down route del -net 10.0.0.0/8 dev br0

iface br0 inet6 static
  address {{network.ipv6.address}}
  netmask {{network.ipv6.netmask}}
  gateway {{network.ipv6.gateway}}

